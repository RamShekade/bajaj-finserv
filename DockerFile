FROM python:3.10-slim

WORKDIR /app

# Install system dependencies if needed (e.g., build-essential for numpy, fitz)
RUN apt-get update && apt-get install -y gcc libmupdf-dev && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

COPY . .

CMD ["gunicorn", "main:app", "--bind", "0.0.0.0:$PORT"]