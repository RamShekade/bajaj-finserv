FROM python:3.10-slim

WORKDIR /app

RUN apt-get update && apt-get install -y libmupdf-dev && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN python -m venv /opt/venv && . /opt/venv/bin/activate && pip install --no-cache-dir -r requirements.txt

# Download gensim model during build
RUN . /opt/venv/bin/activate && python -m gensim.downloader --download glove-wiki-gigaword-50

COPY . /app

ENV PATH="/opt/venv/bin:$PATH"

CMD ["gunicorn", "main:app", "--bind", "0.0.0.0:$PORT"]