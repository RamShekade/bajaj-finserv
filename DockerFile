FROM python:3.10-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# Install gunicorn with uvicorn worker for FastAPI
# Make sure this is in requirements.txt: gunicorn, uvicorn[standard]

# Expose the default port Railway expects (usually 8000)
EXPOSE 8000

# Use $PORT env var for Railway, fallback to 8000
ENV PORT=8000

# Gunicorn needs the ASGI worker class for FastAPI (uvicorn worker)
CMD ["gunicorn", "main:app", "--workers", "1", "--worker-class", "uvicorn.workers.UvicornWorker", "--bind", "0.0.0.0:$PORT"]
